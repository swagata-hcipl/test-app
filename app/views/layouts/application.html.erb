<!DOCTYPE html>
<html>
<head>
<title>Test App</title>
<%= stylesheet_link_tag "application", :media => "all" %>
<%= javascript_include_tag "application" %>
<%= csrf_meta_tags %>
</head>
<body>
<div class="Main_Header">
<h1>Test App</h1>
<%unless session[:user_id]%>
	<ul class="nav"><br/>
	<%= link_to :Signup , :signup, class: "nav_links"%>|
	<%= link_to :Login , :login, class: "nav_links"%>
	</ul>
<%else%>
	<ul class="nav"></br>
		<%= link_to :Home , :home, class: "nav_links" %>| 
		<%= link_to :Vendor , :show_vendor, class: "nav_links" %>| 
		<%= link_to :Owner , :show_owner, class: "nav_links" %> |
		<%= link_to :Employee , :show_employee, class: "nav_links" %>| 	
		<%= link_to :Active , :active, class: "nav_links" %> |
		<%= link_to :Inactive , :inactive, class: "nav_links" %> |
		<%= link_to :NewAsset , :create_asset, class: "nav_links" %> |
		<%= link_to :Logout , :logout, class: "nav_links" %>
	</ul>
<%end%>
</div>
<% if flash[:color]== "valid" %>
	<div class="valid_notice">
	<p><%= flash[:notice]%></p>
	</div>
<% elsif flash[:color]== "invalid"%>
	<div class="invalid_notice">
	<p><%=flash[:notice]%></p>
	</div>
<%else%>
	<div class="notice">
	<p><%=flash[:notice]%></p>
	</div>
<%end%>
<%= yield %>
</body>
</html>