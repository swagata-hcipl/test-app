<%=link_to('Create a new Vendor profile',{:controller => 'vendor', :action => 'new'}) %>
<table class="table">
  <tr>
     <th>ID &nbsp; &nbsp; &nbsp;</th> 
    <th>Name</th>
    <th>Manager</th>
    <th>Address</th>
    <th>Phone No.</th>
    <th>Other Phone No.</th>
  </tr>
   <% if @vendors!= nil %>
   <% @vendors.each do |vendor| %>
   <tr>
	  <td><%= vendor.id%></td>
    <td><%= vendor.name %></td>
    <td><%= vendor.manager %></td>
    <td><%= vendor.address %></td>
    <td><%= vendor.phone_no %></td>
    <td><%= vendor.phone_no_other %></td>
    <td><%= link_to 'Edit', {:controller => 'vendor', :action => 'edit', :id => vendor.id} %>
  </tr>
  <% end %>

  <% end %>

</table>