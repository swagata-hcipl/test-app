<%=link_to('Create a new employee profile',{:controller => 'employee', :action => 'register'}) %>
<table>
  <tr>
     <th>ID &nbsp; &nbsp; &nbsp;</th> 
    <th>Name</th>
    <th>Email</th>
    <th>Employee ID</th>
  </tr>
   <% if @employees!= nil %>
   <% @employees.each do |employee| %>
   <tr>
	  <td><%= employee.id%></td>
    <td><%= employee.name %></td>
    <td><%= employee.email %></td>
    <td><%= employee.employeeid %></td>
    <td><%= link_to 'Edit', {:controller => 'employee', :action => 'edit', :id => employee.id} %>
  </tr>
  <% end %>

  <% end %>

</table>
